---
layout: layouts/base.njk
section: post
---

<article>
  <p>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
  </p>
  <h1>{{ title }}</h1>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/shows/' | url }}">‚Üê Shows index</a>
</nav>
